{
    "name": "wptechnix/wp-tables-schema",
    "version": "1.0.0",
    "description": "A developer-friendly library for creating and managing custom WordPress database tables with schema definition, versioning, and migrations.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "wordpress",
        "database",
        "custom-tables",
        "schema-builder",
        "wpdb",
        "migrations"
    ],
    "authors": [
        {
            "name": "WPTechnix",
            "email": "developers@wptechnix.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "psr/log": "^1.1 || ^2.0 | ^3.0"
    },
    "require-dev": {
        "humanmade/psalm-plugin-wordpress": "^3.1",
        "php-stubs/wordpress-tests-stubs": "^6.8",
        "phpcompatibility/php-compatibility": "*",
        "phpcompatibility/phpcompatibility-wp": "^2",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "vimeo/psalm": "^6.13",
        "wp-coding-standards/wpcs": "^3",
        "yoast/phpunit-polyfills": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "WPTechnix\\WP_Tables_Schema\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPTechnix\\WP_Tables_Schema\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "mkdir-reports": "mkdir reports || true",
        "fix:phpcbf": "vendor/bin/phpcbf || true",
        "lint:phpcs": "vendor/bin/phpcs --report=full",
        "lint:phpstan": "vendor/bin/phpstan analyse --memory-limit=2G --error-format=table",
        "lint:psalm": "vendor/bin/psalm --show-info=true --threads=8",
        "lint": [
            "@fix:phpcbf",
            "@lint:phpcs",
            "@lint:phpstan",
            "@lint:psalm"
        ],
        "setup:phpunit": "bash bin/install-wp-tests wordpress_tests wordpress wordpress db latest true",
        "test": "vendor/bin/phpunit --testdox --colors",
        "test:coverage": [
            "@mkdir-reports",
            "rm -rf reports/coverage",
            "XDEBUG_MODE=coverage vendor/bin/phpunit --testdox --colors --coverage-html=reports/coverage"
        ],
        "test:unit": "vendor/bin/phpunit --testdox --colors --testsuite unit",
        "test:integration": "vendor/bin/phpunit --testdox --colors --testsuite integration"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
